# Generated by Home Manager.
# See https://sw.kovidgoyal.net/kitty/conf.html


# Shell integration is sourced and configured manually
shell_integration no-rc enabled




# Basic
font_family              JetBrainsMono Nerd Font Mono
bold_font                auto
italic_font              auto
bold_italic_font         auto
font_size	             9.0
disable_ligatures        never

# Powerline
symbol_map U+E5FA-U+E62B,U+E700-U+E7C5,U+F000-U+F2E0,U+E200-U+E2A9,U+E0A3,U+E0B4-U+E0C8,U+E0CA,U+E0CC-U+E0D2,U+E0D4,U+f500-U+fd46,U+2570 Symbols Nerd Font

# Tab
map   ctrl+t             new_tab
map   ctrl+q             close_tab
map   ctrl+tab           next_tab
map   ctrl+shift+tab     previous_tab
map   ctrl+shift+l       next_layout


# Cell Configuration
adjust_line_height	     1
adjust_column_width	     1

# Padding
window_padding_width     8

# Tab Bar  
tab_bar_edge             top
active_tab_foreground    #bfdbfe
active_tab_background    #2563eb
active_tab_font_style    normal
inactive_tab_foreground  #e2e8f0
inactive_tab_background  #334155

# Window Separate
active_border_color      #dbeafe
inactive_border_color    #172554
bell_border_color        #ef4444
window_border_width      1pt

# Cursor
cursor                   #475569
cursor_shape             block
cursor_blink_interval    0

# No confirm_os_window_close
confirm_os_window_close  0

