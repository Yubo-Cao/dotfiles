# Basic
font_family              {{.code_font}}
bold_font                auto
italic_font              auto
bold_italic_font         auto
font_size	             11.0
disable_ligatures        never

# Powerline
symbol_map U+E5FA-U+E62B,U+E700-U+E7C5,U+F000-U+F2E0,U+E200-U+E2A9,U+E0A3,U+E0B4-U+E0C8,U+E0CA,U+E0CC-U+E0D2,U+E0D4,U+f500-U+fd46,U+2570 Symbols Nerd Font

# Tab
map   ctrl+t             new_tab
map   ctrl+q             close_tab
map   ctrl+tab           next_tab
map   ctrl+shift+tab     previous_tab
map   ctrl+shift+l       next_layout


# Cell Configuration
adjust_line_height	     1
adjust_column_width	     1

# Padding
window_padding_width     8

# Tab Bar  
tab_bar_edge             top
active_tab_foreground    {{.web.dark_200}}
active_tab_background    {{.web.primary_main}}
active_tab_font_style    normal
inactive_tab_foreground  {{.web.text_dark}}
inactive_tab_background  {{.web.background_dark}}

# Window Separate
active_border_color      {{.web.primary_main}}
inactive_border_color    {{.web.dark_200}}
bell_border_color        {{.web.red_main}}
window_border_width      1pt

# Cursor
cursor                   {{.web.text_dark}}
cursor_shape             block
cursor_blink_interval    0

# Colors
background               {{.web.background_dark}}
background_opacity       1.0
foreground               {{.web.text_dark}}

