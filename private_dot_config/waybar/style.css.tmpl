* {
    border: none;
    border-radius: 0;
    font-family: {{.ui_font}}, "Symbols Nerd Font";
    font-size: 13px;
    color: {{.colors.text.default}};
}

window#waybar {
    background-color: {{.colors.background.default}};
}

/* Indicators */
#idle_inhibitor.activated {
    color: {{.colors.green_500}}
}

#pulseaudio.muted {
    color: {{.colors.amber_500}}
}

#battery.charging {
    color: {{.colors.green_500}}
}

#battery.warning:not(.charging) {
    color: {{.colors.amber_500}}
}

#battery.critical:not(.charging),
#temperature.critical {
    color: {{.colors.red_500}}
}

/* Modules */
.modules-right {
    padding-right: 12px;
}

.modules-left {
    padding-left: 12px;
}

#workspaces button, 
.modules-right label,
#tray {
    margin: 6px 0px;
    border-left: 2px solid {{.colors.border.default}};
    padding: 0px 12px;
}

#workspaces button:first-child, 
#pulseaudio { 
    border: none; 
}

.modules-right button:last-child {
    padding-right: 0;
}

#tray {
    padding-right: 0;
}


